<Window x:Class="Whist_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Whist_GUI"
        mc:Ignorable="d" Closed="Window_Closed"
        Title="MainWindow" Height="auto" Width="auto" WindowState="Maximized">
    <Window.Resources>
        <local:CardImageConverter x:Key="CardConverter" />
        <local:TrumpImageConverter x:Key="TrumpConverter" />
        <FontFamily x:Key="Western" >/Fonts/#Carnivalee Freakshow</FontFamily>
        <RotateTransform3D x:Key="RotationAngle">
            <RotateTransform3D.Rotation>
                <AxisAngleRotation3D Angle="-33" Axis="1, 0, 0" />
            </RotateTransform3D.Rotation>
        </RotateTransform3D>
        <Model3DGroup x:Key="GeneralLighting">
            <AmbientLight Color="#ffb347"/>
            <!-- TODO: calculate direction and position-->
            <SpotLight Color="Yellow" Direction="0 -0.1 -0.3" InnerConeAngle="17" OuterConeAngle="17" Position="0 3 9" />
        </Model3DGroup>
        <PerspectiveCamera x:Key="MainCamera" Position="0, 0, 3"/>
        <LinearGradientBrush x:Key="UI_Brush" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFDCD617" Offset="0"/>
            <GradientStop Color="#FFC2890F" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid x:Name="Whist" Background="Black">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Image Source="Textures/Wood_TitleBar.png" />
            <Image Source="Textures/Title2.png" Height="160" Stretch="Uniform" Margin="0 -80 0 0"/>
        </StackPanel>
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left">
            <local:InfoPanel x:Name="InfoPanel" Foreground="#FFBDB9AC"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Stretch">
            <Grid Width="{Binding RelativeSource={RelativeSource Self}, Path=ActualHeight}" >
                <Viewport3D Camera="{StaticResource MainCamera}" >
                <!-- Button on 3D -->
                    <Viewport2DVisual3D Transform="{StaticResource RotationAngle}">
                        <!-- The Geometry, Material, and Visual for the Viewport2DVisual3D -->
                        <Viewport2DVisual3D.Geometry>
                            <MeshGeometry3D Positions="-1,1,0 -1,-1,0 1,-1,0 1,1,0"
                            TextureCoordinates="0,0 0,1 1,1 1,0" TriangleIndices="0 1 2 0 2 3"/>
                        </Viewport2DVisual3D.Geometry>

                        <Viewport2DVisual3D.Material>
                            <DiffuseMaterial>
                                <DiffuseMaterial.Brush>
                                    <ImageBrush ImageSource="Textures/table.png"/>
                                </DiffuseMaterial.Brush>
                            </DiffuseMaterial>
                        </Viewport2DVisual3D.Material>
                    </Viewport2DVisual3D>
                    <ModelVisual3D>
                        <ModelVisual3D Content="{StaticResource GeneralLighting}" />
                    </ModelVisual3D>
                </Viewport3D>
            <ItemsControl ItemsSource="{Binding Pile}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                            <Viewport3D Height="80" Width="80" Camera="{StaticResource MainCamera}">
                            <!-- Button on 3D -->
                                <Viewport2DVisual3D Transform="{StaticResource RotationAngle}">

                                <!-- The Geometry, Material, and Visual for the Viewport2DVisual3D -->
                                <Viewport2DVisual3D.Geometry>
                                        <MeshGeometry3D Positions="-1,1,0 -1,-1,0 1,-1,0 1,1,0" TextureCoordinates="0,0 0,1 1,1 1,0" TriangleIndices="0 1 2 0 2 3"/>
                                </Viewport2DVisual3D.Geometry>

                                <Viewport2DVisual3D.Material>
                                    <DiffuseMaterial>
                                        <DiffuseMaterial.Brush>
                                             <ImageBrush ImageSource = "{Binding Converter={StaticResource CardConverter}}"  />
                                        </DiffuseMaterial.Brush>
                                    </DiffuseMaterial>
                                </Viewport2DVisual3D.Material>
                            </Viewport2DVisual3D>

                            <!-- Lights -->
                            <ModelVisual3D>
                                    <ModelVisual3D Content="{StaticResource GeneralLighting}" />
                                </ModelVisual3D>
                            </Viewport3D>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

                <ItemsControl x:Name="Comp1SingleCard" ItemsSource="{Binding Comp1Cards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Viewport3D Height="50" Width="50" Margin="-400, -30, 0, 0">
                                <Viewport3D.Camera>
                                    <PerspectiveCamera Position="0, 0, 3"/>
                                </Viewport3D.Camera>
                                <!-- Button on 3D -->
                                <Viewport2DVisual3D>
                                    <Viewport2DVisual3D.Transform>
                                        <RotateTransform3D>
                                            <RotateTransform3D.Rotation>
                                                <AxisAngleRotation3D Angle="-30" Axis="1, 0, 0" />
                                            </RotateTransform3D.Rotation>
                                        </RotateTransform3D>
                                    </Viewport2DVisual3D.Transform>

                                    <!-- The Geometry, Material, and Visual for the Viewport2DVisual3D -->
                                    <Viewport2DVisual3D.Geometry>
                                        <MeshGeometry3D Positions="-1,1,0 -1,-1,0 1,-1,0 1,1,0"
                            TextureCoordinates="0,0 0,1 1,1 1,0" TriangleIndices="0 1 2 0 2 3"/>
                                    </Viewport2DVisual3D.Geometry>

                                    <Viewport2DVisual3D.Material>
                                        <DiffuseMaterial>
                                            <DiffuseMaterial.Brush>
                                                <ImageBrush ImageSource = "Textures\red_back.png"  />
                                            </DiffuseMaterial.Brush>
                                        </DiffuseMaterial>
                                    </Viewport2DVisual3D.Material>
                                </Viewport2DVisual3D>

                                <!-- Lights -->
                                <ModelVisual3D>
                                    <ModelVisual3D>
                                        <ModelVisual3D.Content>
                                            <Model3DGroup>
                                                <AmbientLight Color="#ffb347"/>
                                                <!-- TODO: calculate direction and position-->
                                                <SpotLight Color="Yellow" Direction="0 -0.1 -0.3" InnerConeAngle="17" OuterConeAngle="17" Position="0 3 9" />
                                            </Model3DGroup>
                                        </ModelVisual3D.Content>
                                    </ModelVisual3D>
                                </ModelVisual3D>
                            </Viewport3D>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                
              <!--<ItemsControl ItemsSource="{Binding Comp1Cards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="150, 40, 0, 0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="Textures\red_back.png" Height="50" Width="100" Margin="0 -30 0 0">
                                <Image.RenderTransform>
                                    <RotateTransform Angle="90"/>
                                </Image.RenderTransform>
                            </Image>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>-->

                <ItemsControl ItemsSource="{Binding Comp2Cards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Viewport3D Height="80" Width="40" Margin="-24, -300, 0, 0">
                                <Viewport3D.Camera>
                                    <PerspectiveCamera Position="0, 0, 3"/>
                                </Viewport3D.Camera>
                                <!-- Button on 3D -->
                                <Viewport2DVisual3D>
                                    <Viewport2DVisual3D.Transform>
                                        <RotateTransform3D>
                                            <RotateTransform3D.Rotation>
                                                <AxisAngleRotation3D Angle="-30" Axis="1, 0, 0" />
                                            </RotateTransform3D.Rotation>
                                        </RotateTransform3D>
                                    </Viewport2DVisual3D.Transform>

                                    <!-- The Geometry, Material, and Visual for the Viewport2DVisual3D -->
                                    <Viewport2DVisual3D.Geometry>
                                        <MeshGeometry3D Positions="-1,1,0 -1,-1,0 1,-1,0 1,1,0"
                            TextureCoordinates="0,0 0,1 1,1 1,0" TriangleIndices="0 1 2 0 2 3"/>
                                    </Viewport2DVisual3D.Geometry>

                                    <Viewport2DVisual3D.Material>
                                        <DiffuseMaterial>
                                            <DiffuseMaterial.Brush>
                                                <ImageBrush ImageSource = "Textures\red_back.png"  />
                                            </DiffuseMaterial.Brush>
                                        </DiffuseMaterial>
                                    </Viewport2DVisual3D.Material>
                                </Viewport2DVisual3D>

                                <!-- Lights -->
                                <ModelVisual3D>
                                    <ModelVisual3D>
                                        <ModelVisual3D.Content>
                                            <Model3DGroup>
                                                <AmbientLight Color="#ffb347"/>
                                                <!-- TODO: calculate direction and position-->
                                                <SpotLight Color="Yellow" Direction="0 -0.1 -0.3" InnerConeAngle="17" OuterConeAngle="17" Position="0 3 9" />
                                            </Model3DGroup>
                                        </ModelVisual3D.Content>
                                    </ModelVisual3D>
                                </ModelVisual3D>
                            </Viewport3D>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--<ItemsControl ItemsSource="{Binding Comp2Cards}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20, 160, 0, 0"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Image Source="Textures\red_back.png" Height="80" Width="40" Margin ="-24 15 0 0"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
