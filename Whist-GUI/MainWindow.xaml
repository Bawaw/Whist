                <!-- =========================================== BIDDING UI =========================================== -->
                <DockPanel x:Name="PopupAnchor" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Popup x:Name="popup" IsOpen = "True" PlacementTarget="{Binding ElementName=PopupAnchor}" Placement="Center" Width="190" HorizontalAlignment="Center">
                        <Grid>
                            <ItemsControl x:Name="BiddingView" ItemsSource="{Binding BiddingActions}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button CommandParameter="{Binding }" Command="{Binding DataContext.BidCmd , RelativeSource={RelativeSource AncestorType=ItemsControl}}" Content="{Binding}" FontFamily="Tahoma" FontSize="15" Foreground="{StaticResource UI_Brush}" BorderBrush="#FF604108" >
                                            <Button.Background>
                                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                    <GradientStop Color="#FF7F6036" Offset="0.503"/>
                                                    <GradientStop Color="#FFA88556" Offset="0.112"/>
                                                </LinearGradientBrush>
                                            </Button.Background>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Popup>
                </DockPanel>

                <!-- =========================================== TRICK END UI =========================================== -->
                <DockPanel x:Name="trickEndDock" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0 200 0 0">
                    <Popup x:Name="trickEndPopup" IsOpen="True" PlacementTarget="{Binding ElementName=trickEndDock}" Width="200">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="{Binding Winner}" Foreground="White"/>
                            <TextBlock x:Name="ContinueText" Text="Press enter to continue" Foreground="White" Visibility="{Binding Visibility}"/>
                        </StackPanel>
                    </Popup>
                </DockPanel>
            </Grid>
        </StackPanel>

        <!-- =========================================== PLEYER CARDS =========================================== -->
        <ItemsControl ItemsSource="{Binding HandVM.PlayerCards}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:CardView/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>


